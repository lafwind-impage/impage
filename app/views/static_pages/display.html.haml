= render "shared/header"

%div.showroom

  %div.sort
    - if params[:name] == "like"
      %span= link_to "By Me",  display_path(name: "by_me"), class: "btn"
      %span= link_to "Like",  display_path(name: "like"), class: "btn select"
    - else
      %span= link_to "By Me",  display_path(name: "by_me"), class: "btn select"
      %span= link_to "Like",  display_path(name: "like"), class: "btn"

  - if @posts.empty?
    %div.no_post No post now, come on, let's share !!!

  %div.card_stream
    - @posts.each do |post|
      - if params[:name] == "like"
        - if current_user.voted_as_when_voted_for post
          %div.card
            %div.card_image
              = image_tag post.image.url(:medium)
            %div.card_detail
              %div.description
                %span.title= link_to post.title, post_path(post)
                \-
                %span.desc= post.description

              - if current_user.liked? post
                = link_to dislike_post_path(post) do
                  %span.icon.icon-heart
                  %span.size= post.get_likes.size
              - else
                = link_to like_post_path(post), method: :get do
                  %span.icon.icon-heart-o
                  %span.size= post.get_likes.size

              %span.icon.icon-tags :
              - post.tag_list.each do |tag|
                = link_to "#{tag}", display_path(name: "like", tag: tag), class: "button tag"
      - else
        %div.card
          %div.card_image
            = image_tag post.image.url(:medium)
          %div.card_detail
            %div.description
              %span.title= link_to post.title, post_path(post)
              \-
              %span.desc= post.description
            - if current_user.liked? post
              = link_to dislike_post_path(post) do
                %span.icon.icon-heart
                %span.size= post.get_likes.size
            - else
              = link_to like_post_path(post), method: :get do
                %span.icon.icon-heart-o
                %span.size= post.get_likes.size

            %span.icon.icon-tags :
            - post.tag_list.each do |tag|
              = link_to "#{tag}", display_path(name: "by_me", tag: tag), class: "button tag"

  %div.page
    = will_paginate @posts

  -if user_signed_in?
    %div.index_new_post
      = link_to "New Post", new_post_path, class: "button button_highlight"
  -else
    %div.nothing

= render "shared/footer"
