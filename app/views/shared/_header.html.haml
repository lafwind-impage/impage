%header.cf
  %div.bar_line
  %div.wrapper_wide
    %div.header-logo
      = link_to "Impage", posts_path, id: "logo"

    %nav
      %ul
        - if user_signed_in?
          %li
            = link_to "Explore", posts_path, class: "#{'select' if params[:controller] == 'posts' && params[:action] == 'index'}"
          %li
            = link_to "#{current_user.name.capitalize}", root_path, class: "#{'select' if current_page?(root_path)}"
          %li
            = link_to "Upload", new_post_path, class: "#{'select' if params[:controller] == 'posts' && params[:action] == 'new'}"
          %li
            = link_to "Account", edit_user_registration_path, class: "#{'select' if params[:controller] == 'devise/registrations' && params[:action] == 'edit'}"
          %li
            = link_to "Log Out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure" }
        - else
          %li
            = link_to "Explore", posts_path, class: "#{'select' if params[:controller] == 'posts' && params[:action] == 'index'}"
          %li
            = link_to "Log In", new_user_session_path, class: "#{'select' if params[:controller] == 'devise/sessions' && params[:action] == 'new'}"
          %li
            = link_to "Sign Up", new_user_registration_path, class: "#{'select' if params[:controller] == 'devise/registrations' && params[:action] == 'new'}"
