= image_tag @post.image.url(:large)
%p= @post.title
%p= @post.description
%p= @post.user.email


%p= link_to "Back", root_path

- if @post.user == current_user
  %p= link_to "Edit", edit_post_path(@post)
  %p= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }

- if user_signed_in?
  = link_to like_post_path(@post), method: :get do
    like
    = @post.get_likes.size
  = link_to dislike_post_path(@post) do
    = "Dislike #{@post.get_dislikes.size}"
-else
  %p= "Like: #{@post.get_likes.size}"
  %p= "Dislike #{@post.get_dislikes.size}"

%h3= pluralize(@post.comments.count, "Comment")

- @comments.each do |comment|
  %p= comment.user.email
  %p= comment.content

= render "comments/comment_form"
